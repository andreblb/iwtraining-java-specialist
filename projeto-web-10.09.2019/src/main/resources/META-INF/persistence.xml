<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	
	<persistence-unit name="Mapeamentos">
	
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <jta-data-source>java:jboss/datasources/MapeamentosDS</jta-data-source>
        <class>br.com.iw.entity.map01.Turma</class>
        <class>br.com.iw.map02.Funcionario</class>
        <class>br.com.iw.map03.Estado</class>
        <class>br.com.iw.map03.Governador</class>
        <class>br.com.iw.map04.Colaborador</class>
        <class>br.com.iw.map04.Departamento</class>
        <class>br.com.iw.map05.Cliente</class>
        <class>br.com.iw.map05.Pedido</class>
        <class>br.com.iw.map05.Produto</class>
        <class>br.com.iw.map06.Autor</class>
        <class>br.com.iw.map06.Livro</class>
        
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
        </properties>
	
	</persistence-unit>
</persistence>
